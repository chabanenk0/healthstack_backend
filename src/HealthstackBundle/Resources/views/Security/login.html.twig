{% set section = 'login' %}
{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

        {% block css_inline %}
            @font-face {
            font-family:  Mh;
            src: url(/bundles/healthstack/fonts/Merriweather-Black.ttf);
            }
            .fount-MerH2 {
            font-family:  Mh, 'Comic Sans MS', cursive;
            line-height: 38pt;
            }
            @font-face {
            font-family:  RobotoM;
            src: url(/bundles/healthstack/fonts/Roboto-Medium.ttf);
            }
            .fount-RobotoM {
            font-family:  RobotoM, 'Comic Sans MS', cursive;
            }
            @font-face {
            font-family:  RobotoB;
            src: url(/bundles/healthstack/fonts/Roboto-Bold.ttf);
            }
            .fount-RobotoB {
            font-family:  RobotoB, 'Comic Sans MS', cursive;
            }

            .login-background {
            margin-top: 100px;
            margin-right: auto;
            margin-left: auto;
            margin-bottom: auto;
            max-height: 386px;
            max-width: 772px;
            background: white;
            border-radius: 5px;

            }

            .login-background2 {
            color: #444444;
            max-height: 386px;
            max-width: 386px;
            background: white;
            border-radius: 5px;
            border: 0;
            padding-left: auto;
            padding-right: auto;
            margin-right: auto;
            margin-left: 60px;
            vertical-align: middle;
            display: inline-block;
            text-align: center;

            }

            .txt-login {
            font-size: 36px;
            margin-top: 30px;
            color: #444444;
            font-weight: 1200;
            }
            .txt-login-button {
            font-size: 12px;
            text-align: center;
            border-radius: 5px;
            }
            .img {
            padding: 0;
            margin: 0;

            }
            .form-signin {
            padding:0;
            width: 270px;
            padding-left: auto;
            padding-right: auto;
            }
            .form-signin input {
            margin-bottom: 20px;
            background: transparent;
            border: 0;
            border-bottom: 2px solid #E4E4E4;

            }
            .padding-top-text {
            padding-top: 20px;
            opacity: 0.7;
            font-size: 14px;
            }
            .padding-bottom-text {
            padding-top: 20px;
            font-size: 14px;
            }
            .padding-logo {
            padding-top: auto;
            padding-bottom: auto;
            padding-left:-0px;
            }
            .text-align-left {
            text-align: left;
            }
            .text-line, .form-control, .form-signin input{
            color: #444444;
            opacity: 1;
            border-top: white;
            box-shadow: inset 0 0px 0px
            }
        {% endblock css_inline %}

{% block content %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="login-background fount-MerH2">
        <img src="/bundles/healthstack/images/login.png">
        <div class="login-background2">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <h2 class="form-signin-heading">Log in</h2>
            <label for="inputEmail" class="sr-only txt-align-center fount-RobotoM text-align-left ">Email address</label>
            <input id="username" name="_username" class="form-control text-align-left text-line fount-RobotoM" placeholder="Login" value="" required="">
            <label for="inputPassword" class="sr-only txt-align-center fount-RobotoM text-align-left">Password</label>
            <input type="password" id="password" name="_password" class="form-control text-align-left fount-RobotoM" placeholder="Password" required="">
            <div class="padding-bottom-text">
                <button class="btn btn-lg btn-primary btn-block txt-login-button fount-RobotoB" type="submit">LOG IN</button>
            </div>
        </form>
            <p class="padding-top-text fount-RobotoB">Why I can't log in?</p>
        </div>
    </div>

{% endblock fos_user_content %}
{% endblock content %}